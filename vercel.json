{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {"key": "X-Content-Type-Options", "value": "nosniff"},
        {"key": "X-Frame-Options", "value": "DENY"},
        {"key": "X-XSS-Protection", "value": "1; mode=block"}
      ]
    }
  ],
  "crons": [
    {"path": "/api/cron/abandonment-nudges", "schedule": "*/5 * * * *"},
    {"path": "/api/cron/followup-15d", "schedule": "0 14 * * *"},
    {"path": "/api/cron/funnel-digest-noon", "schedule": "0 18 * * *"},
    {"path": "/api/cron/funnel-digest-3pm", "schedule": "0 21 * * *"}
  ]
}
